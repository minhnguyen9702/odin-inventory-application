<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vintage Clothing Archive</title>
        <script>
        function confirmDelete() {
            return confirm('Are you sure you want to delete this item?');
        }
    </script>
</head>
<body>
    <%- include('partials/_navbar') %>
    <h1>Items List</h1>
    <a href="/item/new">Add New Item</a>

    <% if (items && items.length > 0) { %>
        <ul>
            <% items.forEach(item => { %>
                <li><a href="/item/<%= item.id %>"><%= item.name %></a> %>
                    <form action="/item/delete" method="POST" style="display:inline;">
                        <input type="hidden" name="item_id" value="<%= item.id %>">
                        <button type="submit" onclick="return confirmDelete()">Delete Item</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No items available.</p>
    <% } %>
</body>
</html>